# Application Configuration
APP_NAME=INDOSINT
VERSION=1.0.0
DEBUG=false

# Security
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
ALLOWED_HOSTS=["*"]

# Database Configuration
DATABASE_URL=postgresql://indosint_user:indosint_password@localhost:5432/indosint
MONGODB_URL=mongodb://indosint_user:indosint_password@localhost:27017/indosint?authSource=admin

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=indosint

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=["jpg","jpeg","png","gif","pdf","doc","docx","txt"]

# AI Services
OPENAI_API_KEY=your-openai-api-key
GOOGLE_CLOUD_API_KEY=your-google-cloud-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Social Media APIs
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

INSTAGRAM_USERNAME=your-instagram-username
INSTAGRAM_PASSWORD=your-instagram-password

# AWS S3 Configuration (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET=indosint-storage
AWS_S3_REGION=us-east-1

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_TLS=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/indosint.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# ML Models
ML_MODELS_DIR=ml_models
FACE_RECOGNITION_MODEL=face_recognition_models
NLP_MODELS_DIR=nlp_models

# Supported Languages
SUPPORTED_LANGUAGES=["en","hi","bn","ta","te","mr","gu"]

# Privacy and Compliance
DATA_RETENTION_DAYS=90
ANONYMIZE_PII=true
GDPR_COMPLIANT=true

# Performance
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
CACHE_TTL=3600

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090 